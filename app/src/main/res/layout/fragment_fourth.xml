<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ncu.folder_of_seniors.MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ncu.folder_of_seniors.module.ui.widget.MyScrollView
            android:id="@+id/my_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/activity_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/my_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@drawable/topbg" />

                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/settings"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/rl_un_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_register"
                            style="@style/text_in_header"
                            android:paddingRight="16dp"
                            android:text="注册" />

                        <View
                            android:id="@+id/divider1"
                            style="@style/divider_vertical"
                            android:layout_alignBottom="@+id/tv_login"
                            android:layout_alignTop="@+id/tv_register"
                            android:layout_toRightOf="@+id/tv_register"
                            android:background="@color/text_dark_gray" />

                        <TextView
                            android:id="@+id/tv_login"
                            style="@style/text_in_header"
                            android:layout_toRightOf="@+id/divider1"
                            android:paddingLeft="16dp"
                            android:text="登录" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_header"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/my" />

                        <TextView
                            android:id="@+id/tv_vip_level"
                            style="@style/text_in_header"
                            android:layout_below="@+id/iv_header"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="18dp"
                            android:text="铁牌会员" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_vip_level"
                            android:paddingTop="18dp">

                            <TextView
                                android:id="@+id/tv_nickname"
                                style="@style/text_in_header"
                                android:layout_centerHorizontal="true"
                                android:text="Lotte" />

                            <TextView
                                android:id="@+id/tv_vip_club"
                                android:layout_width="70dp"
                                android:layout_height="22dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/vip_club_shape"
                                android:gravity="center"
                                android:text="会员俱乐部 >"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_focus"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:src="@drawable/guanzhu_on"/>

                        <TextView
                            android:id="@+id/tv_focus"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="@color/text_black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:src="@drawable/ziyuan_on"/>

                        <TextView
                            android:id="@+id/tv_fans"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="粉丝"
                            android:textColor="@color/text_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:src="@drawable/jifen_on"/>

                        <TextView
                            android:id="@+id/tv_jifen"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="积分"
                            android:textColor="@color/text_black" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/divider_16dp" />


                <TextView
                    style="@style/text_item"
                    android:id="@+id/my_launch"
                    android:text="我发布的" />
                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <TextView
                    style="@style/text_item"
                    android:id="@+id/my_selled"
                    android:text="我卖出的" />

                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <TextView
                    style="@style/text_item"
                    android:id="@+id/my_buy"
                    android:text="我买到的" />

                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <TextView
                    style="@style/text_item"
                    android:id="@+id/my_star"
                    android:text="我收藏的" />

                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:id="@+id/add_jifen"
                    style="@style/text_item"
                    android:text="增加100积分"
                    android:visibility="gone"/>

                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <View style="@style/divider_16dp" />

                <TextView
                    style="@style/text_item"
                    android:id="@+id/security"
                    android:text="账户与安全" />

                <View
                    style="@style/divider"
                    android:layout_marginLeft="16dp" />

                <TextView
                    style="@style/text_item"
                    android:id="@+id/tv_setting"
                    android:text="设置" />
            </LinearLayout>
        </ncu.folder_of_seniors.module.ui.widget.MyScrollView>




    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/divider0"
        style="@style/divider"
        android:layout_below="@+id/toolbar"
        android:visibility="invisible" />
</FrameLayout>
