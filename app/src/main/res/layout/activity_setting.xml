<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.ui.SettingActivity">

    <Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/text_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </Toolbar>

    <View
        android:id="@+id/setting_divider0"
        style="@style/divider"
        android:layout_below="@+id/setting_toolbar" />

    <RelativeLayout
        android:id="@+id/setting_rl_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_divider0"
        android:paddingRight="16dp">

        <TextView
            style="@style/text_item"
            android:layout_centerVertical="true"
            android:text="头像" />

        <ImageView
            android:id="@+id/setting_iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/my" />
    </RelativeLayout>

    <View
        android:id="@+id/setting_divider1"
        style="@style/divider"
        android:layout_width="match_parent"
        android:layout_below="@+id/setting_rl_icon"
        android:layout_marginLeft="16dp" />

    <RelativeLayout
        android:id="@+id/setting_rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/setting_divider0">

        <TextView
            style="@style/text_item"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="昵称" />

        <TextView
            android:id="@+id/setting_tv_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray" />

    </RelativeLayout>
    <View
        android:id="@+id/setting_divider2"
        style="@style/divider"
        android:layout_width="match_parent"
        android:layout_below="@+id/setting_rl_icon"
        android:layout_marginLeft="16dp" />

