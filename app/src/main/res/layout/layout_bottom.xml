<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="85dp"
             android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_home_click"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/selector_home" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="首页"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_campus_click"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/selector_find"/>

            <TextView
                android:id="@+id/tab_campus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="同校"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_message_click"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/selector_message"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="消息"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fouth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_mine_click"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/selector_mine"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="我的"
                android:textSize="10dp"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        >

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/center_click"
            android:layout_width="wrap_content"
            android:layout_height="55dip"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:src="@drawable/bg"/>

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="7dp"
            android:text="发布"
            android:textSize="10dp" />
    </FrameLayout>

</FrameLayout>